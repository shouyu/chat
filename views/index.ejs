<!DOCTYPE html>
<html>
  <head>
    <title>Chat</title>
    <link type="text/css" rel="stylesheet" href='/stylesheets/layout-default-latest.css' />
    <link type="text/css" rel="stylesheet" href='/stylesheets/redmond.css' />
    <link type="text/css" rel="stylesheet" href='/stylesheets/multi-select.css' />
    <link type="text/css" rel="stylesheet" href='/stylesheets/style.css' />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js"></script>
    <!--<script type="text/javascript" src="/javascripts/jquery-ui-1.8.13.min.js"></script>-->
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/jquery-ui.min.js"></script>
    <script type="text/javascript" src="/javascripts/jquery.layout-1.3.0-rc29.14.min.js"></script>
    <script type="text/javascript" src="/javascripts/jquery.textbox-hinter.min.js"></script>
    <script type="text/javascript" src="/javascripts/jquery.multi-select.1.6.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type="text/javascript" src="/javascripts/jquery.scrollTo-1.4.2-min.js"></script>
    <script type="text/javascript" src="/javascripts/client.js"></script>
    <script type="text/javascript" src="/javascripts/layout.js"></script>
    <script type="text/javascript">
      var options = {
      port:<%= port %>
      };
    </script>
  </head>
  <body>
    <div id="wrapper">
      <div class="ui-layout-north">
        <div class="ui-widget-header ui-corner-all">
          <h1>fàbregas</h1>
        </div>
      </div>
      <div class="ui-layout-south">
        South Pane
      </div>
      <div id="maincontent" class="ui-layout-center">
        <h3 class="ui-widget-header">&nbsp;</h3>
        <div class="ui-layout-content ui-widget-content">
          <div id="content">
          </div>
        </div>
        <div id="toolbar" class="ui-widget-header">
          <span id="sendmode">
            <input type="radio" id="sendchat" name="sendmode" checked="checked"/>
            <label for="sendchat">
              チャット
            </label>
            <input type="radio" id="sendmemo" name="sendmode" />
            <label for="sendmemo">
              メモ
            </label>
          </span>
          <button id="invitechat">
            招待
          </button>
        </div>
        <div id="chatbox">
          <form id="chat">
            <textarea rows="4" cols="40" name="message" id="message"></textarea>
            <input type="submit" value="送信" disabled="true"  />
          </form>
        </div>
      </div>
      <div class="ui-layout-west">
        <div id="activechannel" class="ui-helper-hidden">
        </div>
        <h3 class="ui-widget-header">チャンネルの追加</h3>
        <div class="ui-widget-content">
          <form id="channeljoin" onsubmit="return false;">
            <input type="text" name="channel" id="channel" class="ui-widget ui-widget-content" />
            <input type="submit" value="追加" id="joinbutton"/>
          </form>
        </div>
        <h3 class="ui-widget-header">チャンネル</h3>
        <div class="ui-layout-content">
          <div id="channels">
          </div>
        </div>
      </div>
      <div class="ui-layout-east">
        <div class="east-center ui-widget-content">
          <h3 class="ui-widget-header">メモ一覧</h3>
          <div id="memolist" class="ui-layout-content">
          </div>
        </div>
        <div class="east-south ui-widget-content">
          <div id="memotoolbar" class="ui-widget-header">
            <button id="editmemo">
              編集
            </button>
            <button id="remmemo">
              削除
            </button>
          </div>
          <div id="memoid" class="ui-helper-hidden"></div>
          <div id="memodate">
            &nbsp;
          </div>
          <div id="memouser">
            &nbsp;
          </div>
          <div id="memobody" class="ui-layout-content">
          </div>
        </div>
      </div>
    </div>
    <div id="editmemo-dialog" title="メモの編集">
      <label for="editmemoarea">
        メモ
      </label>
      <textarea rows="4" cols="20"  id="editmemoarea" class="text ui-widget-content ui-corner-all"></textarea>
    </div>
    <div id="invite-dialog" title="チャンネルへ招待">
      <form>
      <label for="">招待する人</label>
      <select id="invitemember" multiple="multiple" name="invitemember[]">
      </select>
      </form>
    </div>
  </body>
</html>